---
import { Icon } from "astro-icon/components";
import Button from "../../components/ui/Button.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import Footer from "../../components/Footer.astro";
---

<MainLayout>
    <div class="relative h-96">
        <h1
            class="shadow-md text-center text-white tracking-[0.2em] text-5xl md:text-7xl font-medium font-serif mt-16 absolute top-1/2 -translate-y-1/2 left-1/2 -translate-x-1/2"
        >
            Reserva ahora
        </h1>
        <div
            class="absolute inset-0 bg-cover bg-center -z-10 bg-[url('/images/header-acerca-de.png')] bg-fixed"
        >
        </div>
        <!-- Overlay -->
        <div class="absolute inset-0 bg-black bg-opacity-50 -z-10"></div>
    </div>
    <div class="bg-amber-200 h-6 w-full"></div>

    <section class="my-16 sm:my-32">
        <div
            class="block sm:flex justify-center w-full lg:w-2/5 mx-auto gap-16"
        >
            <div class="w-full sm:w-1/2 space-y-5 px-16 lg:px-0">
                <h4 class="font-semibold max-w-96">
                    We’d love to hear from you.
                    <br />Just choose the most convenient method and we’ll get
                    back to you as soon as we can.
                </h4>
                <div>
                    <div>10 Street Name, City Name</div>
                    <div>Country, Zip code</div>
                </div>
                <div>
                    <div>555 555 555</div>
                    <div>example@mail.com</div>
                </div>
                <div class="flex gap-3 mt-5">
                    <Icon name="facebook" class="text-amber-400" size={24} />
                    <Icon name="x" class="text-amber-400" size={24} />
                    <Icon name="instagram" class="text-amber-400" size={24} />
                </div>
            </div>
            <div class="w-full sm:w-1/2 mt-16 sm:mt-0 px-8 lg:px-0 ">
                <form class="space-y-4">
                    <input
                        type="text"
                        placeholder="Nombre"
                        class="py-2 px-4 w-full bg-gray-100"
                    />
                    <input
                        type="email"
                        placeholder="Email"
                        class="py-2 px-4 w-full bg-gray-100"
                    />
                    <input
                        type="text"
                        placeholder="Teléfono"
                        class="py-2 px-4 w-full bg-gray-100"
                    />
                    <input
                        type="text"
                        placeholder="Mensaje"
                        class="py-2 px-4 w-full bg-gray-100"
                    />

                    <Button type="submit">Enviar</Button>
                </form>
            </div>
        </div>
    </section>

    <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3734.1683774117505!2d-105.22612158293595!3d20.621992556890397!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x842145e5bf332f0d%3A0x145b84a6b8b1f52a!2sMako%2054%20-%20Apartments%20for%20rent!5e0!3m2!1ses!2smx!4v1727741338986!5m2!1ses!2smx"
        class="w-full h-96"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>

    <div class="bg-amber-200 h-6 w-full"></div>
    <Footer />
</MainLayout>
